<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical">

        // 가운데 로고

        <TextView
            android:id="@+id/yourtree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="YOUR TREE"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/purple_200"/>

    <ImageView
        android:id="@+id/ivCapture"
        android:layout_width="match_parent"
        android:layout_height="454dp"
        android:background="@drawable/square_background_border_black"
        android:padding="2dp"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnPhoto"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/webbutton"
            android:text="카메라" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:onClick="ScreenshotButton"
            android:text="저장하기"
            android:layout_marginLeft="10dp"
            android:background="@drawable/webbutton"
            tools:ignore="OnClick" />
        <Button
            android:id="@+id/image_memo"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="Draw_memo"
            android:text="메모하기"
            android:layout_marginLeft="10dp"
            android:background="@drawable/webbutton"
            tools:ignore="OnClick" />
    </LinearLayout>

</LinearLayout>